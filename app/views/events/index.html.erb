<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>About</th>
      <th>Date</th>
      <th>Start</th>
      <th>End</th>
      <th>Charge</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= image_tag event.image.url(:thumb) %></td>
        <td><%= event.name %></td>
        <td><%= event.location %></td>
        <td><%= event.about %></td>
        <td><%= event.date %></td>
        <td><%= event.start %></td>
        <td><%= event.end %></td>
        <td><%= event.charge %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

