    <%= @events.count %> <%= link_to "Total Events", events_path%><br>
    <%= @jobs.count %> <%= link_to "Total Jobs"%><br>
    <%= @members.count %> <%= link_to "Total Members"%><br>
    <%#= @companies.count %><%= link_to "Total companies"%><br> <%# not yet created a page for them%>
    <%= @blogs.count %> <%= link_to "Total Blog Posts"%><br>
</p>
<h3><%= link_to 'MEMBERSHIPS', members_path %></h3>
<h3><%= link_to 'POST A JOB', jobs_path %></h3>


<h3>Events Board</h3>

<table>
  <tbody> <%# as per ihub. there is just the event name and dates and the name is truncated at some point%>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to (event.name), event %></td>
        <td><%= event.location %></td>
        <td><%= event.date %></td><!-- somthing is seriously awful about thsi format, work on it-->
        <td><%= event.start %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Jobs Board</h3>
<tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= image_tag job.image.url(:thumb) %></td>
        <td><%= link_to (job.title), jobs_path %></td>
      </tr>
    <% end %>
  </tbody>

<h2>Listing blogs</h2>

<table>
  <thead>
    <tr>
    <th></th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= image_tag blog.image.url(:thumb) %></td>
        <td><%= link_to (blog.title), blog %></td>
        <td><%= truncate(strip_tags(blog.content), length: 150) %></td>
      </tr>
    <% end %>
  </tbody>
</table>




