<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Type</th>
      <th>Company name</th>
      <th>Country</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= image_tag job.image.url(:thumb) %></td>
        <td><%= link_to (truncate(strip_tags(job.title), length: 55)), job %></td>
        <td><%= truncate(strip_tags(job.description), length: 150) %></td>
        <td><%= job.category %></td>
        <td><%= job.type %></td>
        <td><%= job.company_name %></td>
        <td><%= job.country %></td>
        <td><%= job.city %></td>
        <!--<td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

